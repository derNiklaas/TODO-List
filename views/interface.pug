extends layout

block header
    link(rel='stylesheet', href='/stylesheets/interface.css')

block content
    script(src="../javascripts/interface.js")
    div(class="panel" id="panelMisc")
        h3 Misc stuff?
        button(id="reloadButton" type="button" onclick="press('toggleVisibility')") Toggle visibility
        br
        button(type="button" onclick="press('reload')") Reload todo list
        br
        button(id="stop" type="button" onclick="press('stop')") Stop the program
    div(class="panel" id="panelTasks")
        h3 Toggle Lines
        button(id="taskOne" type="button" onclick="press('toggleTaskOne')") Toggle #{task1}
        br
        button(id="taskTwo" type="button" onclick="press('toggleTaskTwo')") Toggle #{task2}
        br
        button(id="taskThree" type="button" onclick="press('toggleTaskThree')") Toggle #{task3}
        br
        button(id="taskFour" type="button" onclick="press('toggleTaskFour')") Toggle #{task4}
    div(class="panel" id="panelChange")
        h3 Change Lines
        input(id="textInput" type="text")
        br
        button(id="setToTaskOne" type="button" onclick="setTo('taskOne')") Set to 1
        button(id="setToTaskTwo" type="button" onclick="setTo('taskTwo')") Set to 2
        button(id="setToTaskThree" type="button" onclick="setTo('taskThree')") Set to 3
        button(id="setToTaskFour" type="button" onclick="setTo('taskFour')") Set to 4
